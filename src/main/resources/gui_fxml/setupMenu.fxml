<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1200.0" style="-fx-background-color: black;" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.client.gui.controllers.SetupMenuController">
    <children>

        <Label layoutX="549.0" layoutY="54.0" text="Setup" textFill="#46b9e7">
            <font>
                <Font size="32.0" />
            </font>
        </Label>

        <AnchorPane layoutX="357.0" layoutY="134.0" prefHeight="199.0" prefWidth="466.0" style="-fx-background-color: black; " VBox.vgrow="ALWAYS">
            <ToggleButton fx:id="expertToggle" layoutX="344.0" layoutY="100.0" mnemonicParsing="false" onAction="#setExpertMode" style="-fx-background-color: GRAY;" text="Expert mode" />
            <Label layoutX="57.0" layoutY="102.0" prefHeight="27.0" prefWidth="245.0" text="Enable / disable Expert mode :" textFill="#46b9e7">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <Label layoutX="57.0" layoutY="150.0" text="Click to change number of players :" textFill="#46b9e7">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <ToggleButton fx:id="numPlayersToggle" layoutX="362.0" layoutY="148.0" mnemonicParsing="false" onAction="#changeNumPlayers" style="-fx-text-fill: WHITE; -fx-background-color: #787aef;" text="2" textFill="WHITE">
                <font>
                    <Font size="14.0" />
                </font>
            </ToggleButton>

        </AnchorPane>
        <Button layoutX="634.0" layoutY="379.0" mnemonicParsing="false" onMouseClicked="#quit" prefHeight="45.0" prefWidth="79.0" style="-fx-background-color: #787aef; -fx-text-fill: WHITE;" text="QUIT" />
        <Button layoutX="492.0" layoutY="379.0" mnemonicParsing="false" onMouseClicked="#startLogin" prefHeight="45.0" prefWidth="79.0" style="-fx-background-color: #787aef; -fx-text-fill: WHITE;" text="ENTER" />


        <Label fx:id="messageBox" layoutX="520.0" layoutY="458.0" text="display message" textFill="#46b9e7">
            <font>
                <Font size="24.0" />
            </font>
        </Label>


    </children>
</AnchorPane>
